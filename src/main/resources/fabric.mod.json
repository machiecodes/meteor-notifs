{
  "schemaVersion": 1,
  "id": "meteor-notifs",
  "version": "${version}",
  "name": "Meteor Notifs",
  "description": "Proof of concept for HUD-based minimalist notifications that fit the Meteor theme.",
  "authors": [
    "MachieChirps"
  ],
  "icon": "assets/meteor-notifs/icon.png",
  "environment": "client",
  "entrypoints": {
    "meteor": [
      "me.ricky.notifs.MeteorNotifs"
    ]
  },
  "mixins": [
    "meteor-notifs.mixins.json"
  ],
  "custom": {
    "meteor-client:color": "255,215,0"
  },
  "depends": {
    "java": ">=21",
    "minecraft": ["${mc_version}"],
    "meteor-client": "*"
  }
}
